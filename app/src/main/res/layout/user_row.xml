<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="clertonleal.com.androidarchitecture.viewModel.UserRowViewModel"/>
    </data>
    <LinearLayout
        android:id="@+id/user_row_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:onClick="@{(view) -> viewModel.onUserClick(viewModel.user)}">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text='@{viewModel.user.firstName + " " + viewModel.user.lastName}'/>

    </LinearLayout>
</layout>